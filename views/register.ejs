<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Page</title>
    <style>
        body {
            background-color: blue
        }

        * {
            color: black;
            text-align: center;
            margin: 2rem;
            padding: 2rem;
        }

        a,
        h3,
        p {
            display: block;
            margin: 0;
            padding: 0;
            text-align: left;
        }

        #home {
            text-align: center;
        }
        .wrapper{
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
        }
    </style>
</head>

<body>
    <a href="/" id="home">Home</a>
    <h1>Register Page</h1>
    <h2>Welcome to Best Website ever seen in the World</h2>

    <% if (!id) { %>
    <h3>User List</h3>
    <% userList.forEach(user => { %>
    <a href="/register/<%=user.id %> " id="userList"><%=`${user.id} ${user.name}`%> </a> <br>
    <% }) %>

    <% } else { %>
    <div class="wrapper">
        <div class="leftSide">
            <h3>User List</h3>
            <% userList.forEach(user => { %>
            <a href="/register/<%=user.id %> " id="userList"><%=`${user.id} ${user.name}`%> </a> <br>
            <% }) %>
        </div>
        <div class = "RightSide">
            <h3>User Name</h3>
            <a href="/?name=<%=userList[id-1].name %>"> <%=userList[id-1].name %></a>
        </div>
    </div>

    <% } %>











</body>

</html>